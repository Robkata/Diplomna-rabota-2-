@using ExpressTaxi.Models.Reservation
@model IEnumerable<ExpressTaxi.Models.Taxi.TaxiAllVM>

@{
    ViewData["Title"] = "All Taxies";
}

@if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
{
    <p>
        <a asp-action="Create">Create New Taxi</a>
    </p>
}
@foreach (var item in Model)
{
    <div class="container d-flex justify-content-center mt-50 mb-50">
        <div class="row">
            <div class="col-md-10">
                <div class="card card-body">
                    <div class="media align-items-center align-items-lg-start text-center text-lg-left flex-column flex-lg-row">
                        <div class="mr-2 mb-3 mb-lg-0"><img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="Image" width="150" />  </div>
                        <div class="media-body">
                            <h6 class="media-title font-weight-semibold"> <a>@Html.DisplayFor(modelItem => item.Brand)</a> </h6>
                            @*<ul class="list-inline list-inline-dotted mb-3 mb-lg-2">
                                    <li class="list-inline-item"><a href="#" class="text-muted" data-abc="true">Phones</a></li>
                                    <li class="list-inline-item"><a href="#" class="text-muted" data-abc="true">Mobiles</a></li>
                                </ul>*@
                            <p class="mb-3"> @Html.DisplayFor(modelItem => item.Extras) </p>
                            <ul class="list-inline list-inline-dotted mb-0">
                                <li class="list-inline-item">Quantity <a>@Html.DisplayFor(modelItem => item.Engine)</a></li>

                            </ul>
                        </div>
                        <div class="mt-3 mt-lg-0 ml-lg-3 text-center">
                            <h3 class="mb-0 font-weight-semibold">$@Html.DisplayFor(modelItem => item.Year)</h3>
                            <ul class="list-inline list-inline-dotted mb-0">
                                <li class="list-inline-item">Discount <a> @Html.DisplayFor(modelItem => item.Driver) %</a></li>
                            </ul>
                            <div> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> </div>
                            <div class="text-muted"></div> <button style="background-color: dodgerblue" type="button" class="btn btn-warning mt-4 text-white"> Order</button>
                            @if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
                            {
                        <ul>
                            <a asp-action="Edit" asp-controller="Taxi" asp-route-id="@item.Id">
                                Edit <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-screwdriver" viewBox="0 0 16 16">
                                    <path d="m0 1 1-1 3.081 2.2a1 1 0 0 1 .419.815v.07a1 1 0 0 0 .293.708L10.5 9.5l.914-.305a1 1 0 0 1 1.023.242l3.356 3.356a1 1 0 0 1 0 1.414l-1.586 1.586a1 1 0 0 1-1.414 0l-3.356-3.356a1 1 0 0 1-.242-1.023L9.5 10.5 3.793 4.793a1 1 0 0 0-.707-.293h-.071a1 1 0 0 1-.814-.419L0 1zm11.354 9.646a.5.5 0 0 0-.708.708l3 3a.5.5 0 0 0 .708-.708l-3-3z" />
                                </svg>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id">
                                Delete <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                </svg>
                            </a>
                        </ul>}

                            @await Html.PartialAsync("_OrderPartial", new ReservationCreateBindingModel
                       {
                           TaxiId = item.Id

                       })


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}